<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.exerciciofxml.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextArea fx:id="areaTexto" text="olaa"></TextArea>
    <Label fx:id="welcomeText"/>
    <Button text="Hello!" onAction="#onHelloButtonClick"/>
    <ContextMenu fx:id="menu">
        <items>
            <MenuItem text="Item 1" onAction="#handleMenuItem1"/>
            <MenuItem text="Item 2" onAction="#handleMenuItem2"/>
        </items>
    </ContextMenu
</VBox>
