<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.exerciciofxml1.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="cantidade" text="0"/>
    <Button fx:id="aumentar" text="Aumentar" onAction="#onAumentarClick"/>
    <ProgressBar fx:id="progressBar" progress="0.0"></ProgressBar>
    <Button fx:id="diminuir" text="Diminuir" onAction="#onDiminuirClick"/>
</VBox>
